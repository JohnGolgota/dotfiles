# If not running interactively, don't do anything
case $- in
    *i*) ;;
      *) return;;
esac


common_setup="${XDG_CONFIG_HOME:-$HOME/.config}/shell_setup/common"
# User specific aliases and functions
if [ -d "$common_setup" ]; then
    for rc in "$common_setup"/*; do
        if [ -f "$rc" ]; then
            . "$rc"
        fi
    done
fi
unset rc

bash_setup="${XDG_CONFIG_HOME:-$HOME/.config}/shell_setup/bash"
# User specific aliases and functions
if [ -d "$bash_setup" ]; then
    for rc in "$bash_setup"/*; do
        if [ -f "$rc" ]; then
            . "$rc"
        fi
    done
fi
unset rc

# Source global definitions
if [ -f /etc/bashrc ]; then
    . /etc/bashrc
fi

